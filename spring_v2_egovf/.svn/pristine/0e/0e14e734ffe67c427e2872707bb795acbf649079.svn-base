var layoutObj = function (){};

/**
 * 작성자: jamuge
 * signaturePad layout
 * returnMsg.alertMsg(msg, type, fn) 호출
 */
layoutObj.prototype.signaturePad = function (data) {
	if(data != null && data != "" && typeof data != "undefined"){
		
		if($("#signLayout").length < 1){
			
			var signLayout = "";
			
			signLayout += '<div id="signature-pad" class="signature-pad">';
			signLayout +=     '<div class="signature-pad--body">';
			signLayout +=         '<canvas></canvas>';
			signLayout +=     '</div>';
			signLayout +=     '<div class="signature-pad--footer">';
			signLayout += 	     '<div class="description">Sign above</div>';
			signLayout += 		     '<div class="signature-pad--actions">';
			signLayout += 			 '<div>';
			signLayout += 			     '<button type="button" class="button clear" data-action="clear">Clear</button>';
			signLayout += 			 '</div>';
			signLayout += 			 '<div>';
			signLayout += 			     '<button type="button" class="button save" data-action="save-png">Save as PNG</button>';
			signLayout += 			     '<button type="button" class="button save" data-action="save-svg">Save as SVG</button>';
			signLayout += 		     '</div>';
			signLayout += 	      '</div>';
			signLayout +=      '</div>';
			signLayout +=  '</div>';
			
			
			$("body").append(signLayout);
			
		}else{
			$("#text_confirmMsg").text(data);
		}

		if(layer_alert("#signLayout")){
			return true;
		};
		
	}else{
		console.log(">>> signLayout: Error");
	}
};
var signaturePad = new layoutObj();

