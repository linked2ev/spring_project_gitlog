<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>

<jsp:include page="/WEB-INF/jsp/fo/include/head.jsp" />
</head>

<body>

<!-- header -->
<jsp:include page="/WEB-INF/jsp/fo/include/header/headerPanel${panelAuth }.jsp" flush="true" />
<!-- // header 

<!-- main -->
<main id="main" class="main respWidth">
	<div class="containerWrap">
	
		<!-- leftNav -->  
		<jsp:include page="/WEB-INF/jsp/fo/include/left/leftPanel${panelAuth }.jsp" flush="true" />
		<!-- // leftNav -->
	
		<div class="pageWrap rndContact">
		
			<div class="page-title">
				<h2><spring:message code="menu.009"/></h2>
				<div class="page-location">
					<span class="home"><spring:message code="menu.010"/></span> - <spring:message code="menu.008"/> - <b><spring:message code="menu.009"/></b>
				</div>
			</div>
			
			<div class="page-content"> 
				
				<div class="join-term mgtp20">
					<div class="term-wrap">
						<div class="term-text">
  

<c:choose>
	<c:when test="${LOCALE_LANG eq 'ko'}">
		
<div class="note-editable panel-body" contenteditable="true" style="height: 300px;">
<p align="center">
<strong><u><span style="font-size: 20px;">개인정보 수집․이용에 대한 동의</span></u></strong>
</p>
<p><br></p>
<table class="table table-bordered">
<tbody>
<tr><td width="30%" style="vertical-align: middle;">■ 수집방법</td><td width="70%">아모레퍼시픽 고객연구센터 사이트를 통해 수집함</td></tr>
<tr><td style="vertical-align: middle;">■ 수집항목</td><td>이메일</td></tr>
<tr><td style="vertical-align: middle;">■ 수집 · 이용 목적</td><td>고객 문의에 대해 이메일을 통해 응답함</td></tr>
<tr><td style="vertical-align: middle;">■ 이용 · 보유기간</td><td>본 사이트에 이메일 정보를 보유하지 않음</td></tr>
<tr><td colspan="2">■ 귀하는 회사의 개인정보의 수집 및 이용에 대한 동의를 거부할 수 있습니다. 단, 동의를 거부할 경우 고객 문의를 진행하실 수 없습니다.</td></tr></tbody>
</table></div>
</p>

	</c:when>
	<c:otherwise>
	
	다국어 작업중
	
	</c:otherwise>
</c:choose>

						</div>
					</div>
					<div class="termAgree-chk">
						<input type="checkbox" id="termAgree" name="termAgree" value="Y">
						<label for="termAgree"> <spring:message code="oneQna.000"/></label>
					</div>
				</div>
				</br></br>
				
				<div class="page-desc-box">
					<p><spring:message code="oneQna.001"/></p>
				</div>
				
				<form id="form" name="form" enctype="multipart/form-data">
					<div class="tblWrap tbl-wm">
						<table>
							<caption><spring:message code="oneQna.002"/></caption>
							<colgroup>
								<col width="25%">
								<col width="75%">
							</colgroup>
							<tbody>
								<tr>
									<th><spring:message code="oneQna.003"/></th>
									<td> 
										<c:set var="EMAIL_CD_VALUE" value="${fn:substring(info.EMAIL, fn:indexOf(info.EMAIL,'@')+1, fn:length(info.EMAIL)) }"/>
									    <input type="text" id="EMAIL_ID" name="EMAIL_ID" class="inputBox requireFileld" title="<spring:message code="member.019"/>" value="" style="width:180px;"> @
									    <input type="text" id="EMAIL_DOMAIN" name="EMAIL_DOMAIN" class="inputBox requireFileld" title="<spring:message code="member.020"/>" value="" style="width:160px;">
										<select id="EMAIL_CD" name="EMAIL_CD" class="inputBox" title="<spring:message code="member.020"/>" style="width:160px;">
											<option value=""><spring:message code="member.026"/></option>
		                                    <c:if test="${not empty EMAIL_CD_LIST }"> 
		                                        <c:forEach var="codeRow" items="${EMAIL_CD_LIST }" varStatus="i">
		                                            <option value="<c:out value="${codeRow.VALUE }"/>" <c:if test="${codeRow.VALUE eq EMAIL_CD_VALUE}">selected="selected"</c:if>>
		                                                <c:out value="${codeRow.VALUE }"/>
		                                            </option> 
		                                        </c:forEach>
		                                    </c:if>
		                                </select>
		                                <input type="hidden" id="EMAIL" name="EMAIL" title="<spring:message code="member.018"/>">
									</td>
								</tr>
								<tr>
									<th><spring:message code="form.000"/></th>
									<td><input type="text" id="TITLE" name="TITLE" class="inputBox requireFileld" title="<spring:message code="form.000"/>"></td>
								</tr>
								<tr>
									<th><spring:message code="form.001"/></th> 
									<td><textarea type="text" id="CONTENTS" name="CONTENTS" class="inputBox requireFileld" title="<spring:message code="form.001"/>" style="height: 300px;"></textarea></td>
								</tr>
								<tr>
									<th><spring:message code="button.file.000"/></th>
									<td>
										<div class="divForm file-box">
											<input type="text" class="fileName inputBox" readonly="readonly" style="width:340px;">
											<label for="upload-name" class="btn btn-5th btn-blue btn_file"><spring:message code="button.file.001"/></label>
											<input type="file" id="upload-name" class="upload-name" name="SEND_UPLOAD_FILE">
										</div>
									</td>
								</tr>
								
							</tbody>
						</table>
					</div>
				</form>
					
				<div class="btn-wrap btnC">
					<button type="button" class="btn btn-prim btn-red wd100" id="fn_sendEmail"><spring:message code="button.008"/></button>
				</div>

			</div><!-- // page-content -->
		</div><!-- // pageWrap -->

	</div><!-- // container -->
</main>
<!-- // main -->

<!-- footer -->
<jsp:include page="/WEB-INF/jsp/fo/include/footer.jsp" />
<!-- // footer -->

<script language="javascript" defer="defer">
	var uploadFile = $('.file-box .upload-name');
	uploadFile.on('change', function(){
		if(window.FileReader){
			var filename = $(this)[0].files[0].name;
		} else {
			var filename = $(this).val().split('/').pop().split('\\').pop();
		}
		$(this).siblings('.fileName').val(filename);
	});
	 
	$(function(){
		
		// 저장 버튼 클릭 이벤트
		$(document).on("click", "#fn_sendEmail", function () {
			var $form = $("form");
			
			if(!$('input:checkbox[name="termAgree"]').is(":checked")){
				$("#termAgree").focus();
				returnMsg.alertMsg("개인정보 수집․이용에 대해 동의해주세요.");
				return;
			}
			
			// FORM  필수값 검사
			if(isEmptyForm("form")){
				var email = $("#EMAIL_ID").val() + "@" + $("#EMAIL_DOMAIN").val();
				$("#EMAIL").val(email);
				
				if(!isCheckEmail($("#EMAIL").val())){
					returnMsg.alertMsg("이메일 형식을 확인해주세요.");
					$("#EMAIL_ID").val("");
					$("#EMAIL_DOMAIN").val("");
				}  
				$form.attr({"action":"<c:url value='/fo/qna/oneQnaSendProc.do'/>", "target":"_self", "method":"post"}).submit();
			}
		});
		
		$(document).on("change", "#EMAIL_CD", function(){
			if($(this).val() == ""){ 
				$("#EMAIL_DOMAIN").val("");
				$("#EMAIL_DOMAIN").prop("disabled", false);
			}else{
				$("#EMAIL_DOMAIN").val($(this).val());
				$("#EMAIL_DOMAIN").prop("disabled", true);
			}
		});
		
	});
	
</script>

</body>
</html>